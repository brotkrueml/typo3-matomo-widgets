{
	"name": "brotkrueml/typo3-matomo-widgets",
	"type": "typo3-cms-extension",
	"description": "TYPO3 Dashboard widgets showing Matomo reports",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"Matomo",
		"Dashboard",
		"Widgets"
	],
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/brotkrueml/typo3-matomo-widgets/issues",
		"source":  "https://github.com/brotkrueml/typo3-matomo-widgets"
	},
	"require": {
		"php": ">=7.2",
		"ext-json": "*",
		"typo3/cms-core": "^10.4",
		"typo3/cms-dashboard": "^10.4"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.16",
		"php-coveralls/php-coveralls": "^2.2",
		"phpunit/phpunit": "^8.5 || ^9.2"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\MatomoWidgets\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\MatomoWidgets\\Tests\\": "Tests"
		}
	},
	"config": {
		"sort-packages": true,
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "matomo_widgets",
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/web"
		}
	},
	"scripts": {
		"fix-cs": ".Build/bin/php-cs-fixer fix"
	}
}
