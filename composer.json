{
	"name": "brotkrueml/typo3-matomo-widgets",
	"description": "TYPO3 Dashboard widgets with Matomo reports",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"Matomo",
		"Dashboard",
		"Widgets"
	],
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/brotkrueml/typo3-matomo-widgets/issues",
		"source": "https://github.com/brotkrueml/typo3-matomo-widgets",
		"docs": "https://docs.typo3.org/p/brotkrueml/typo3-matomo-widgets/master/en-us/"
	},
	"require": {
		"php": ">=7.2",
		"ext-json": "*",
		"symfony/finder": "^4.4 || ^5.0 || ^6.0",
		"symfony/polyfill-php80": "^1.17",
		"typo3/cms-core": "^10.4.15 || ^11.5",
		"typo3/cms-dashboard": "^10.4.15 || ^11.5",
		"typo3/cms-install": "^10.4.15 || ^11.5"
	},
	"require-dev": {
		"brotkrueml/coding-standards": "~1.2.0",
		"brotkrueml/typo3-matomo-integration": "^1.0",
		"donatj/mock-webserver": "^2.2",
		"ergebnis/composer-normalize": "~2.18.0",
		"php-coveralls/php-coveralls": "^2.4",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan": "~1.2.0",
		"phpunit/phpunit": "^8.5 || ^9.5",
		"symfony/yaml": "^5.4 || ^6.0",
		"symplify/phpstan-rules": "^10.0"
	},
	"suggest": {
		"brotkrueml/typo3-matomo-integration": "Matomo integration for TYPO3"
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\MatomoWidgets\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\MatomoWidgets\\Tests\\": "Tests"
		}
	},
	"config": {
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.3.x-dev"
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"extension-key": "matomo_widgets",
			"web-dir": ".Build/web"
		}
	}
}
