{
	"name": "brotkrueml/typo3-matomo-widgets",
	"type": "typo3-cms-extension",
	"description": "TYPO3 Dashboard widgets with Matomo reports",
	"keywords": [
		"TYPO3 CMS",
		"TYPO3 extension",
		"Matomo",
		"Dashboard",
		"Widgets"
	],
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Chris MÃ¼ller",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.2",
		"ext-json": "*",
		"symfony/finder": "^4.4 || ^5.0",
		"symfony/polyfill-php80": "^1.17",
		"typo3/cms-core": "^10.4.15 || ^11.2",
		"typo3/cms-dashboard": "^10.4.15 || ^11.2",
		"typo3/cms-install": "^10.4.15 || ^11.2"
	},
	"require-dev": {
		"donatj/mock-webserver": "^2.2",
		"ergebnis/composer-normalize": "^2.15",
		"friendsofphp/php-cs-fixer": "^2.18",
		"php-coveralls/php-coveralls": "^2.4",
		"phpunit/phpunit": "^8.5 || ^9.5",
		"typo3/coding-standards": "^0.3",
		"vimeo/psalm": "^4.7"
	},
	"config": {
		"bin-dir": ".Build/bin",
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"extension-key": "matomo_widgets",
			"web-dir": ".Build/web"
		}
	},
	"autoload": {
		"psr-4": {
			"Brotkrueml\\MatomoWidgets\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Brotkrueml\\MatomoWidgets\\Tests\\": "Tests"
		}
	},
	"support": {
		"issues": "https://github.com/brotkrueml/typo3-matomo-widgets/issues",
		"source": "https://github.com/brotkrueml/typo3-matomo-widgets",
		"docs": "https://docs.typo3.org/p/brotkrueml/typo3-matomo-widgets/master/en-us/"
	}
}
